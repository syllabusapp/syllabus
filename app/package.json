{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-scripts build",
    "build-storybook": "build-storybook",
    "commit": "git-cz",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "format": "yarn prettier --write",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "yarn lint --fix --format verbose",
    "now-build": "yarn build",
    "preserve": "yarn build",
    "prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "semantic-release": "semantic-release",
    "serve": "serve -s build -l 3000",
    "setup": "yarn && yarn validate",
    "start": "REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-scripts start",
    "storybook": "start-storybook -p 6006",
    "test": "is-ci \"test:ci\" \"test:watch\"",
    "test:ci": "react-scripts test --ci --coverage --runInBand --reporters=default --reporters=jest-junit",
    "test:coverage": "react-scripts test --coverage",
    "test:e2e": "is-ci \"test:e2e:run\" \"test:e2e:dev\"",
    "test:e2e:dev": "start-server-and-test start http://localhost:3000 cy:open",
    "test:e2e:run": "start-server-and-test serve http://localhost:3000 cy:run",
    "test:watch": "react-scripts test",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "validate": "lint-staged && yarn type-check"
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@sentry/browser": "^5.0.5",
    "@xstate/react": "^0.2.0",
    "apollo-client": "^2.5.1",
    "apollo-client-preset": "^1.0.8",
    "apollo-link": "^1.2.11",
    "formik": "^1.5.2",
    "graphql-tag": "^2.10.1",
    "i18next": "^15.0.9",
    "i18next-browser-languagedetector": "^3.0.1",
    "i18next-xhr-backend": "^2.0.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "react": "^16.8.6",
    "react-apollo": "^2.5.3",
    "react-apollo-hooks": "^0.4.4",
    "react-app-polyfill": "^0.2.2",
    "react-dom": "^16.8.6",
    "react-helmet-async": "^1.0.2",
    "react-i18next": "^10.6.1",
    "react-pose": "^4.0.8",
    "use-persisted-state": "^0.3.0",
    "use-query-params": "^0.3.0",
    "xstate": "^4.4.0",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@cypress/webpack-preprocessor": "^4.0.3",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@storybook/addon-a11y": "^5.0.6",
    "@storybook/addon-actions": "^5.0.6",
    "@storybook/addon-backgrounds": "^5.0.6",
    "@storybook/addon-console": "^1.1.0",
    "@storybook/addon-knobs": "^5.0.6",
    "@storybook/addon-links": "^5.0.6",
    "@storybook/addon-viewport": "^5.0.6",
    "@storybook/addons": "^5.0.6",
    "@storybook/react": "^5.0.6",
    "@types/i18next": "^12.1.0",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/jwt-decode": "^2.2.1",
    "@types/node": "^11.13.0",
    "@types/reach__router": "^1.2.3",
    "@types/react": "^16.8.12",
    "@types/react-dom": "^16.8.3",
    "@types/react-helmet": "^5.0.8",
    "@types/storybook__addon-a11y": "^5.0.0",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__addon-knobs": "^4.0.5",
    "@types/storybook__addon-links": "^3.3.4",
    "@types/storybook__addon-viewport": "^4.1.0",
    "@types/storybook__react": "^4.0.1",
    "@types/use-persisted-state": "^0.3.0",
    "@types/yup": "^0.26.12",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "babel-loader": "^8.0.5",
    "commitizen": "^3.0.7",
    "cypress": "^3.2.0",
    "cypress-testing-library": "^2.3.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "is-ci-cli": "^1.1.1",
    "jest-dom": "^3.1.3",
    "jest-junit": "^6.3.0",
    "lint-staged": "^8.1.5",
    "mocha": "^6.0.2",
    "mocha-junit-reporter": "^1.21.0",
    "mocha-multi-reporters": "^1.1.7",
    "prettier": "^1.16.4",
    "react-scripts": "2.1.8",
    "react-testing-library": "^6.0.4",
    "semantic-release": "^15.13.3",
    "serve": "^11.0.0",
    "start-server-and-test": "^1.7.13",
    "ts-loader": "^5.3.3",
    "typescript": "^3.4.1"
  },
  "browserslist": {
    "development": [
      "last 1 chrome versions",
      "last 1 firefox versions"
    ],
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 11",
      "not op_mini all"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn validate"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/syllabusapp/app"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ]
    ]
  },
  "lint-staged": {
    "src/**/*.+(ts|tsx)": [
      "eslint"
    ],
    "**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)": [
      "prettier --write",
      "git add"
    ]
  }
}
